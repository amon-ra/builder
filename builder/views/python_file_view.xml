<?xml version="1.0"?>
<odoo>
    <data>

        <!-- Python Import -->
        <record model="ir.ui.view" id="builder_python_import_tree_view">
            <field name="name">builder.python.file.import.tree</field>
            <field name="model">builder.python.file.import</field>
            <field name="arch" type="xml">
                <tree string="Python Import">
                    <field name="parent"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="builder_python_import_form_view">
            <field name="name">builder.python.file.import.form</field>
            <field name="model">builder.python.file.import</field>
            <field name="arch" type="xml">
                <form string="Python Import">
                    <sheet>
                        <group>
                            <group>
                                <field name="parent"/>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_builder_python_import">
            <field name="name">Python Import</field>
            <field name="res_model">builder.python.file.import</field>
            
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    
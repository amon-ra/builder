        <record id="view_views_line_tree" model="ir.ui.view">
            <field name="name">builder.views.line.tree</field>
            <field name="model">builder.views.line</field>
            <field name="arch" type="xml">
                <tree string="Fields" editable="top" create="1" delete="1" >
                    <field name="id" invisible="1" />
                    <field name="sequence" widget="handle"/>
                    <field name="parent_id"/>
                    <field name="name"/>
                    <field name="attribute_name"/>
                    <field name="attribute_id" />
                    <field name="attribute_value_id" />
                    <field name="attribute_ids" widget="many2many_tags" context="{'default_type_id': name, 'default_line_id': id}"  />
                    <button name="action_append_child" type="object" string="Add" icon="fa-plus" />
                </tree>
            </field>
            <!-- <field name="field_parent">child_ids</field> -->
        </record>
        <record id="view_views_line_form" model="ir.ui.view">
            <field name="name">builder.views.line.form</field>
            <field name="model">builder.views.line</field>
            <field name="arch" type="xml">
                <form string="Field">
                    <sheet>
                        <field name="parent_id"/>
                        <field name="name"/>
                        <field name="attribute_name"/>
                        <field name="attribute_ids">
                            <tree string="Attributes">
                                <field name="type_id" invisible="1"/>
                                <field name="line_id" invisible="1"/>
                                <field name="name"/>
                            </tree>
                        </field>
                    </sheet>
                </form>

            </field>
        </record>     
        <record model="ir.ui.view" id="builder_ir_ui_view_tree">
            <field name="name">builder.ir.ui.view.tree</field>
            <field name="model">builder.ir.ui.view</field>
            <field name="arch" type="xml">
                <tree string="View">
                    <field name="model_id"/>
                    <field name="type"/>
                    <field name="xml_id"/>
                    <field name="inherit_id"/>
                    <button name="action_open_view" type="object" string="Configure"
                            class="oe_button oe_form_button oe_link"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="builder_ir_ui_view_form">
            <field name="name">builder.ir.ui.view.form</field>
            <field name="model">builder.ir.ui.view</field>
            <field name="arch" type="xml">
                <form string="View Generator">
                    <sheet>
                        <div class="oe_button_box" name="buttons">
                            <button class="oe_inline oe_stat_button" string="Edit XML" name="action_edit_lines" type="object" icon="fa-plus" context="{'default_module_id': active_id}"/>
                        </div> 
                        <div class="oe_title">
                        <h1>
                            <field name="name"/>
                            </h1>
                        </div>                    
                        <group>
                            <group>
                                <field name="model_id" domain="[('module_id', '=', context.get('default_module_id'))]"/>
                                <field name="model_inherit_type" invisible="1"/>
                                <field name="model_name" invisible="1"/>
                                <field name="type" invisible="1"/>
                                <field name="special_states_field_id"  invisible="1"/>

                                <field name="xml_id"/>
                            </group>
                            <group>
                                <field name="type"/>
                                <field name="inherit_view" attrs="{'invisible': [('model_inherit_type', '=', False)]}"/>
                                <field name="subclass_model" invisible="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Inherit" attrs="{'invisible': [('inherit_view', '=', False)]}">
                                <group>
                                    <group>
                                        <field name="inherit_view_id" options="{'no_create': True, 'no_open': False}"
                                               domain="[('model', '=', model_name), ('type', '=', type)]"/>
                                        <field name="inherit_view_ref"
                                               attrs="{'invisible': [('inherit_view', '=', False), ], 'required': [('inherit_view', '=', True),]}"/>
                                    </group>
                                    <group>

                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="inherit_change_ids">
                                            <tree string="Changes">
                                                <field name="inherit_view_type"/>
                                                <field name="inherit_view_target"/>
                                                <field name="inherit_view_position"/>
                                            </tree>
                                            <form string="Changes">
                                                <group>
                                                    <group>
                                                        <field name="inherit_view_type"/>
                                                        <field name="inherit_view_target"/>
                                                        <field name="inherit_view_position"/>
                                                    </group>
                                                    <group>
                                                        <field name="inherit_view_attribute"
                                                               attrs="{'invisible': [['inherit_view_position', '!=', 'attribute']]}"/>
                                                        <field name="inherit_view_attribute_value"
                                                               attrs="{'invisible': [['inherit_view_position', '!=', 'attribute']]}"/>
                                                        <field name="inherit_view_selector" attrs="{'invisible': [['inherit_view_position', '=', 'attribute']]}"/>
                                                        <field name="inherit_view_field"
                                                               domain="[['model_id', '=', parent.model_id]]"
                                                               attrs="{'invisible': ['|',['inherit_view_selector','!=','field'],['inherit_view_position', '=', 'attribute']]}"/>
                                                    </group>
                                                </group>
                                                        <field name="inherit_view_arch" 
                                                            nolabel="1" widget="ace" theme="tomorrow" mode="xml" style="min-height:200px"
                                                            attrs="{'invisible': ['|',['inherit_view_selector','!=','xml'],['inherit_view_position', '=', 'attribute']]}"/>
                                            </form>
                                        </field>
                                    </group>
                                </group>
                            </page>            
                            <page string="Groups">
                                <field name="group_ids"
                                       domain="[('module_id', '=', context.get('default_module_id'))]"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_builder_ir_ui_view">
            <field name="name">Views</field>
            <field name="res_model">builder.ir.ui.view</field>
            
            <field name="view_mode">form</field>
        </record>
    </data>
</odoo>
